@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewData["Title"] = title;
}
<h2>@title</h2>
<form asp-controller="Customer" asp-action="Edit" method="post">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@


    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="FirstName" class="form-label">First Name</label>
        </div>
        <div class="col-10">
            <input asp-for="FirstName" class="form-control">
            <div class="text-danger">@Html.ValidationMessage("FirstName")</div>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="LastName" class="form-label">Last Name</label>
        </div>
        <div class="col-10">
            <input asp-for="LastName" class="form-control">
            <div class="text-danger">@Html.ValidationMessage("LastName")</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="Address" class="form-label">Address</label>
        </div>
        <div class="col-10">
            <input asp-for="Address" class="form-control">
            <div class="text-danger">@Html.ValidationMessage("Address")</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="City" class="form-label">City</label>
        </div>
        <div class="col-10">
            <input asp-for="City" class="form-control">
            <div class="text-danger">@Html.ValidationMessage("City")</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="State" class="form-label">State</label>
        </div>
        <div class="col-10">
            <input asp-for="State" class="form-control">
            <div class="text-danger">@Html.ValidationMessage("State")</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="PostalCode" class="form-label">Postal Code</label>
        </div>
        <div class="col-10">
            <input asp-for="PostalCode" class="form-control">
            <div class="text-danger">@Html.ValidationMessage("PostalCode")</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="CountryId" class="form-label">Country</label>
        </div>
        <div class="col-10">
            <select asp-for="CountryId" asp-items="@(new SelectList(ViewBag.Countries, "Id", "Name"))" class="form-select">
                <option value=0>Select a country...</option>
            </select>
            <div class="text-danger">@Html.ValidationMessage("CountryId")</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="Email" class="form-label">Email</label>
        </div>
        <div class="col-10">
            <input asp-for="Email" class="form-control" type="email">
            <div class="text-danger">@Html.ValidationMessage("Email")</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="Phone" class="form-label">Phone</label>
        </div>
        <div class="col-10">
            <input asp-for="Phone" class="form-control" type="tel">
            <div class="text-danger">@Html.ValidationMessage("Phone")</div>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />

    <input type="hidden" asp-for="DateAdded" value="@(Model.DateAdded == string.Empty ? DateTime.Now.ToString("MM/dd/yyyy h:mm:ss tt") : Model.DateAdded)" />

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Customer" asp-action="List" asp-route-id="@Model?.Id"
           class="btn btn-primary">Cancel</a>
    </div>
</form>