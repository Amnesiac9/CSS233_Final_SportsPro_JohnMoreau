@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewData["Title"] = title;
    string isInvalid(string str) => ViewData.ModelState.GetFieldValidationState(str) == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid ? "is-invalid" : ""; // WHY IS THIS SO HARD?
}
<h2>@title</h2>
<form asp-controller="Customer" asp-action="Edit" method="post" class="needs-validation">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="FirstName" class="form-label">First Name</label>
        </div>
        <div class="col-5">
            <input asp-for="FirstName" class="form-control @isInvalid("FirstName")">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("FirstName")
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="LastName" class="form-label">Last Name</label>
        </div>
        <div class="col-5">
            <input asp-for="LastName" class="form-control @isInvalid("LastName")">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("LastName")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="Address" class="form-label">Address</label>
        </div>
        <div class="col-5">
            <input asp-for="Address" class="form-control @isInvalid("Address")">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("Address")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="City" class="form-label">City</label>
        </div>
        <div class="col-5">
            <input asp-for="City" class="form-control @isInvalid("City")">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("City")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="State" class="form-label">State</label>
        </div>
        <div class="col-5">
            <input asp-for="State" class="form-control @isInvalid("State")">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("State")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="PostalCode" class="form-label">Postal Code</label>
        </div>
        <div class="col-5">
            <input asp-for="PostalCode" class="form-control @isInvalid("PostalCode")">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("PostalCode")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="CountryId" class="form-label">Country</label>
        </div>
        <div class="col-5">
            <select asp-for="CountryId" asp-items="@(new SelectList(ViewBag.Countries, "Id", "Name"))" class="form-select @isInvalid("CountryId")">
                <option value=0>Select a country...</option>
            </select>
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("CountryId")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="Email" class="form-label">Email</label>
        </div>
        <div class="col-5">
            <input asp-for="Email" class="form-control @isInvalid("Email")" type="text" id="email-input">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("Email")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 mt-1">
            <label asp-for="Phone" class="form-label">Phone</label>
        </div>
        <div class="col-5">
            <input asp-for="Phone" class="form-control @isInvalid("Phone")" id="phone-input">
        </div>
        <div class="col-5 text-danger">
            @Html.ValidationMessage("Phone")
        </div>
    </div>

    <input type="hidden" asp-for="Id" />

    <input type="hidden" asp-for="DateAdded" value="@(Model.DateAdded == string.Empty ? DateTime.Now.ToString("MM/dd/yyyy h:mm:ss tt") : Model.DateAdded)" />

    <div class="mb-3">
        <button onclick="updatePhoneNumber('phone-input')" type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Customer" asp-action="List" asp-route-id="@Model?.Id"
           class="btn btn-primary">Cancel</a>
    </div>
</form>
